<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Swagger UI</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/creonitrest/ui/swagger-ui.css') }}" >
    <link rel="icon" type="image/png" href="{{ asset('bundles/creonitrest/ui/favicon-32x32.png') }}" sizes="32x32" />
    <link rel="icon" type="image/png" href="{{ asset('bundles/creonitrest/ui/favicon-16x16.png') }}" sizes="16x16" />
    <style>
        html
        {
            box-sizing: border-box;
            overflow: -moz-scrollbars-vertical;
            overflow-y: scroll;
        }
        *,
        *:before,
        *:after
        {
            box-sizing: inherit;
        }

        body {
            margin:0;
            background: #fafafa;
        }
    </style>
    <script id="swagger-data" type="application/json">{{ spec|json_encode(65)|raw }}</script>
</head>

<body>

<div id="swagger-ui"></div>

<script src="{{ asset('bundles/creonitrest/ui/swagger-ui-bundle.js') }}"> </script>
<script src="{{ asset('bundles/creonitrest/ui/swagger-ui-standalone-preset.js') }}"> </script>
<script>
    window.onload = function() {

        // Build a system
        const data = JSON.parse(document.getElementById('swagger-data').innerText);
        const ui = SwaggerUIBundle({
            spec: data,
            dom_id: '#swagger-ui',
            deepLinking: true,
            validatorUrl: null,
            presets: [
                SwaggerUIBundle.presets.apis,
                SwaggerUIStandalonePreset
            ],
            plugins: [
                SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: "StandaloneLayout"
        })

        window.ui = ui
    }
</script>
</body>

</html>
